<Window x:Class="WPF_Notes.MainScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Notes"
        mc:Ignorable="d"
        Title="MainScreen" Height="450" Width="800">
    <StackPanel Background="WhiteSmoke">
        <Border Padding="12">
            <StackPanel>
                <TextBlock Text="Notes" FontSize="36" HorizontalAlignment="Center" FontWeight="DemiBold" FontFamily="Calibri"/>
                <Grid Margin="0 5 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0 0 5 0">
                        <TextBlock Text="Recent notes" FontSize="18" FontFamily="Calibri"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="5 0 0 0">
                        <Button Content="New" FontSize="18" FontFamily="Calibri"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

    </StackPanel>
</Window>
